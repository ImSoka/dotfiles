[bar/main]

; Dimensions in % or pixels
width = 100%
height = 25

;how much space is reserved at the beginning/end of the bar
padding = 2

;How much space is reserved between modules
module-margin-left = 2

background = ${colors.background}
foreground = ${colors.foreground}

modules-left = pulseaudio backlight 
modules-center = date
modules-right = wired-network wireless-network memory cpu battery 

font-0 = Sauce Code Pro Nerd Font Mono:pixelsize=11;2

locale = es_ES.UTF-8

